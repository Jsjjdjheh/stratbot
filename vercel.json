{
  "version": 2,
  "builds": [
    { "src": "api/bot.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/bot", "dest": "api/bot.js" },
    { "src": "/form/(.*)", "dest": "api/bot.js" },     // form GET
    { "src": "/submit/(.*)", "dest": "api/bot.js" },   // form POST
    { "src": "/", "dest": "api/bot.js" }               // root for quick check
  ]
}
